<header id="activation" class="intro-block bg-color1 cover-bg asirewards-hero top60">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="form-container">
          <h3 class="title">Edit Destination</h3>

          <%= simple_form_for @destination,
            url: admin_destination_path(@destination),
            html: { class: "form-horizontal"} do |f| %>
            <%= f.input :name, placeholder: "Destination Name *" %>
            <%= f.input :content, placeholder: "Destination Description" %>
            <%= f.input :banner, as: :file %>
            <%= f.input :location, placeholder: "City / Location *" %>
            <%= f.input :country %>

            <br />
            <%= f.submit(
              "Update Destination", class: "btn btn-lg btn-block btn-primary"
            ) %>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</header>


