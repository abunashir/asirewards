<header id="activation" class="intro-block bg-color1 cover-bg asirewards-hero top60">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="form-container">
          <h3 class="title">New Order for Certificates</h3>

          <div class="order">
            <h3><%= @order.certificate.name %></h3>
            <p><%= @order.note %></p>
            <p>Quantity: <%= @order.quantity %></p>
            <p>Requested by: <%= @order.user.name %></p>

            <% if @order.pending? %>
              <%= link_to(
                "Approve",
                admin_order_path(@order), method: :put,
                class: "btn btn-lg btn-primary"
              ) %>
          <% end %>
          </div>

        </div>
      </div>
    </div>
  </div>
</header>
