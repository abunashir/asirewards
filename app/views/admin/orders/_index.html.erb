<table class="table">
  <tr>
    <th>Certificate title</th>
    <th>Ordered by</th>
    <th>Quantity</th>
    <th>Status</th>
    <th>Actions</th>
  </tr>

  <% @orders.each do |order| %>
    <tr>
      <td><%= order.certificate.name %></td>
      <td><%= order.user.name %></td>
      <td><%= order.quantity %></td>
      <td><%= order.status %></td>
      <td><%= link_to "details", admin_order_path(order) %></td>
    </tr>
  <% end %>
</table>

