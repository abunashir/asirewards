<header id="activation" class="intro-block bg-color1 cover-bg asirewards-hero top60">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="form-container">
          <h3 class="title"><%= @certificate.title %> Customers</h3>

          <%= render "flashes" %>

          <div class="table-responsive">
            <table class="table">
              <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Status</th>
                <th>Action</th>
              </tr>

              <% @kits.each do |kit| %>
                <tr>
                  <td><%= kit.user.name %></td>
                  <td><%= kit.user.email %></td>
                  <td><%= kit.status %></td>
                  <td>Download</td>
                </tr>
              <% end %>
            </table>

            <br />

            <% if @certificate.number_of_available_kits > 0 %>
              <%= link_to(
                "Send certificate",
                new_certificate_kit_path(@certificate),
                class: "btn btn-primary"
              ) %>

          <% else %>
            <%= link_to(
              "Order Certificate Kits", orders_path, class: "btn btn-primary"
            ) %>
          <% end %>

          </div>


        </div>
      </div>
    </div>
  </div>
</header>
