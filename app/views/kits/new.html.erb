<header id="activation" class="intro-block bg-color1 cover-bg asirewards-hero top60">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="form-container">
          <h3 class="title">New Order for Certificates</h3>

          <%= simple_form_for @kit,
            url: certificate_kits_path(@certificate),
            html: { class: "form-horizontal" } do |f| %>

            <%= f.simple_fields_for :user do |user_form| %>
              <%= user_form.input :name, placeholder: "Full Name *" %>
              <%= user_form.input :email, placeholder: "Email Address *" %>
              <%= user_form.input :phone, placeholder: "Phone Number" %>
            <% end %>

            <br />
            <%= f.submit(
              "Send certificate",
              class: "btn btn-lg btn-block btn-primary" 
            ) %>
        <% end %>

        </div>
      </div>
    </div>
  </div>
</header>
