<header id="activation" class="intro-block bg-color1 cover-bg asirewards-hero top60">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="form-container">
          <h3 class="title">Certificate kit orders</h3>

          <%= render "flashes" %>

          <div class="table-responsive">
            <table class="table">
              <tr>
                <th>Certificate title</th>
                <th>Quantity</th>
                <th>Note</th>
                <th>Status</th>

                <% if current_user.management_admin? %>
                  <th>Actions</th>
                <% end %>
              </tr>

              <% @orders.each do |order| %>
                <tr>
                  <td><%= order.certificate.name %></td>
                  <td><%= order.quantity %></td>
                  <td><%= order.note %></td>
                  <td><%= order.status %></td>

                  <% if current_user.management_admin? %>
                    <td><%= link_to "details", order_path(order) %></td>
                  <% end %>
                </tr>
              <% end %>
            </table>

            <br />
            <% if current_user.admin? %>
              <%= link_to(
                "Add new order",
                new_order_path,
                class: "btn btn-primary"
              ) %>
          <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>
</header>
