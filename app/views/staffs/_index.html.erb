<table class="table">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Role</th>
  </tr>

  <% @staffs.each do |staff| %>
    <tr>
      <td><%= staff.name %></td>
      <td><%= staff.email %></td>
      <td><%= staff.role.titleize %></td>
    </tr>
  <% end %>
</table>

<br />
<%= link_to(
  "Add new staff", new_staff_path, class: "btn btn-primary"
) %>
