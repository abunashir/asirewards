<header id="activation" class="intro-block bg-color1 cover-bg asirewards-hero">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="form-container">
          <h3 class="title">Change your password</h3>

          <%= render "flashes" %>

          <%= simple_form_for :password_reset,
            url: user_password_path(@user, token: @user.confirmation_token),
            html: { method: :put } do |f| %>
            <%= f.input :password, placeholder: "Enter your new password" %>

            <br />
            <%= f.submit "Submit", class: "btn btn-primary btn-lg btn-block" %>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</header>
