<header id="activation" class="intro-block bg-color1 cover-bg asirewards-hero top60">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="form-container">
          <h3 class="title">Add Certificate Destinations</h3>

          <%= simple_form_for @certificate_destinations,
            url: certificate_destinations_path(@certificate),
            html: { class: "form-horizontal" } do |f| %>

            <div class="certificate_destinations">

              <%= f.input(
                :destination_ids,
                collection: @certificate_destinations.selectable,
                as: :check_boxes
              )%>
          </div>

          <br />
          <%= f.submit(
            "Save destination", class: "btn btn-lg btn-block btn-primary"
          ) %>
      <% end %>
        </div>
      </div>
    </div>
  </div>
</header>



