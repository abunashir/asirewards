<header id="activation" class="intro-block bg-color1 cover-bg asirewards-hero top60">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="form-container">
          <h3 class="title">Certificates</h3>

          <%= render "flashes" %>

          <div class="table-responsive">
            <table class="certificates table">
              <tr>
                <th>Title</th>
                <th>Status</th>
                <th>Available Kits</th>
                <th>Actions</th>
              </tr>

              <% @certificates.each do |certificate| %>
                <tr>
                  <td><%= certificate.name %></td>
                  <td><%= certificate.status %></td>
                  <td><%= certificate.number_of_available_kits %></td>

                  <td>
                    <%= link_to "Send kit", certificate_kits_path(certificate) %>
                    <%= link_to "Preview", certificate_preview_path(certificate) %>
                  </td>
                </tr>
              <% end %>
            </table>


            <br />

            <% if current_user.admin? %>
              <%= link_to(
                "New Certificate",
                new_certificate_path,
                class: "btn btn-primary"
              ) %>
          <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>
</header>

