<%= simple_form_for @certificate,
  html: { class: "form-horizontal" } do |f| %>
  <%= f.input :name, placeholder: "Title *" %>
  <%= f.simple_fields_for :contents do |content_form| %>
    <%= content_form.input :banner, as: :file %>
  <% end %>
  <%= f.input :price, placeholder: "Retails Price *" %>

  <br />
  <%= f.submit "Create certificate", class: "btn btn-lg btn-block btn-primary" %>
<% end %>
