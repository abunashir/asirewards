<table class="certificates table">
  <tr>
    <th>Name</th>
    <th>Status</th>
    <th>Available Kits</th>
    <th>Actions</th>
  </tr>

  <% @certificates.each do |certificate| %>
    <tr>
      <td><%= certificate.name %></td>
      <td><%= certificate.status %></td>
      <td><%= certificate.number_of_available_kits(current_user.company) %></td>

      <td>
        <%= link_to(
          "Send kit", certificate_kits_path(certificate) 
        ) %>

      <%= link_to(
        "Preview", certificate_path(certificate), target: "_blank"
      ) %>

    <%= link_to(
      "Destinations", certificate_destinations_path(certificate)
    ) %>

    </td>
    </tr>
  <% end %>
</table>

<br />
<% if current_user.admin? %>
  <%= link_to("New Certificate", new_certificate_path, class: "btn btn-primary") %>
<% end %>
