    <meta name="viewport" content="initial-scale=1" />
    <style type="text/css">

body {
  font-family: Calibri, Candara, Segoe, 'Segoe UI', Optima, Arial, sans-serif;
  text-align: justify;
}

body .certificate_wrapper {
  line-height: 1.3;
}

body .certificate_wrapper .banner img {
  width: 100%;
}

body .certificate_wrapper .titles {
  padding-top: 20px;
}

body .certificate_wrapper .titles h2 {
  text-align: center;
}

body .certificate_wrapper .titles p {
  padding: 15px 0;
}

body .certificate_wrapper .strong {
  font-weight: bold;
}

body .certificate_wrapper .code .certificate_code {
  width: 250px;
  margin: 35px auto;
  border: 1px solid #d1d1d1;
  text-align: center;
  padding: 25px;
  font-size: 1em;
}

body .certificate_wrapper .code .certificate_code .activation_code {
  font-size: 1.5em;
}

