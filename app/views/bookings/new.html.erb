<header id="activation" class="intro-block bg-color1 cover-bg asirewards-hero top60">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="form-container">
          <h3 class="title">
            Booking Request for
            <%= truncate(@destination.name, length: 15) %>
          </h3>

          <%= render "flashes" %>

          <%= simple_form_for @booking,
            url: destination_bookings_path(@destination),
            html: { class: "form-horizontal" } do |f| %>
            <%= f.input :confirmation_code, placeholder: "Confirmation Code *" %>
            <%= f.input(
              :check_in, as: :string, placeholder: "Check In (MM/DD/YYYY) *"
            ) %>
            <%= f.input :adults, placeholder: "Number of adults *" %>
            <%= f.input :children, placeholder: "Number of children" %>
            <%= f.input :contact, placeholder: "Primary contact *" %>
            <%= f.input :note, placeholder: "Special requets" %>

            <br />
            <%= f.submit "Submit", class: "btn btn-lg btn-block btn-primary" %>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</header>

