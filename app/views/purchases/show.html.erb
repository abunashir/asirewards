<% certificate = @purchase.certificate %>

<header id="activation" class="intro-block bg-color1 cover-bg asirewards-hero">
  <div class="container">

    <div class="row">
      <div class="col-md-6 dark-bg">
        <div class="slogan">
          <h1>
            Purchase<br>
            <strong>
              Your Certificate
            </strong>
          </h1>
        </div>

        <ul class="item-list-left item-list-small item-list editContent">
          <li>
            <i class="num-icon">1</i>
            <p>
            Enter your name and contact details here, you will then be directed to our payment gateway with PayPal
            </p>
          </li>

          <li>
            <i class="num-icon">2</i>
            <p>
            Make your payment using your existing PayPal account, or by your
            credit or debit card.
            </p>
          </li>

          <li>
            <i class="num-icon">3</i>
            <p>
            Once payment has been completed you will receive your certificate and activation code by email. Follow instructions to activate and book.
            </p>
          </li>
        </ul>
      </div>

      <div class="col-md-5 col-md-offset-1">
        <div class="form-container">
          <h3 class="title">Enter Your Details</h3>

          <%= render "flashes" %>

          <%= simple_form_for @purchase,
            url: purchase_path(certificate),
            method: :patch, html: { class: "form-horizontal" } do |f| %>

            <%= f.simple_fields_for :user do |user_form| %>
              <%= user_form.input :name_part_one, placeholder: "First Name *" %>
              <%= user_form.input :name_part_two, placeholder: "Last Name *" %>
              <%= user_form.input :email, placeholder: "Email Address *" %>
              <%= user_form.input :phone, placeholder: "Phone Number *" %>
            <% end %>

            <br />
            <%= f.submit "Buy Now", class: "btn btn-lg btn-block btn-primary"  %>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</header>

<section id="featured" class="bg-color3 asirewards-destinations purchase_cert">
  <div class="container">
    <div class="text-center">
      <h2 class="title"><%= certificate.name %></h2>
    </div>

    <div class="row">
      <%= raw(certificate.sub_title) %>
    </div>

    <div class="row">
      <%= raw(certificate.terms) %>
    </div>

    <div class="row">
      <%= raw(certificate.policies) %>
    </div>
</section>
